doctype html
html(lang='en',ng-app='Genesis')
  head
    meta(http-equiv="Content-type" content="text/html" ,charset="UTF-8")
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700|Droid+Serif', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css')
    link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet',type='text/css', href='css/reset.css')
    link(rel='stylesheet', type='text/css',href='css/animate.css')
    // CSS reset
    link(rel='stylesheet', type='text/css',href='css/style2.css')
    link(rel='stylesheet', type='text/css',href='css/styles.css') 
    //link(rel='stylesheet', type='text/css',href='css/masonry_style.css') 

    script(type='text/javascript', src = 'js/jquery-2.1.1.js')
    script(type='text/javascript', src = 'js/angular.min.js')
    script(type='text/javascript' , src = 'js/bootstrap.min.js')
    script(type='text/javascript', src = 'js/angularModule.js')
    script(type='text/javascript', src = 'js/socketModule.js')
    script(type='text/javascript', src = 'js/main.js')
    script(type='text/javascript' , src = 'js/angular-uuid.js')
    script(type='text/javascript' , src = 'js/angular-local-storage.min.js')
      
    // Resource style
    script(src='js/modernizr.js')
    // Modernizr

    script(src='//momentjs.com/downloads/moment-with-locales.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular-moment/0.10.3/angular-moment.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular-route.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular-cookies.js')


    title Genesis Mesoamerica
  body.animated.fadeIn(ng-controller='indexController')

    header
      #cssmenu
        ul
          li.active
            a(href='/')
              span Inicio
          li
            a(href='/showDevotionals', ng-show = 'session()')
              span Devocionales
          li
            a(href='/showUsers')
              span Misioneros
          li.last
            a.cd-btn(href='#' ,ng-show = 'session()')
              span Perfil
          ul.navbar-right
            li
          
              a(href='/login',ng-hide = 'session()')
                span Iniciar Sesión
         
              a(href='/logout',ng-show = 'session()',ng-click='clearStorage()')
                span Cerrar Sesión

    .container-fluid
      
      main.cd-main-content
        .jumbotron(style = 'margin-top : 1%')
          .row
            .col-md-4(ng-if='session()')
              a(href='#postModal', data-toggle="modal")
                .well
                  .row
                    .col-md-2
                      img(src='img/userPhotos/{{id}}.jpg',height='35',width='35').img-circle
                    .col-md-8(style='margin-top:1%').text-muted
                      | ¿Tienes una nueva noticia que contar?
                    .col-md-2
                      img(src='img/instagram19.png',height='35',width='35')

                
                
          
            .col-md-4(ng-repeat='post in posts')
              .well.animated.bounceInUp
                  
                  .row
                    .col-md-1
                        img(src='img/userPhotos/{{post.user_id}}.jpg',height='35',width='35').img-circle

                    .col-md-6(style='margin-top:3%')
                        {{post.userName}}
                    .col-md-5(style='margin-top:3%')
                      span(am-time-ago='post.date')

                  .row(style='margin-top:5%',ng-if='post.img',align='center')
                    .col-md-14
                      img(src='img/postPhotos/{{post._id}}.jpg').img-responsive
                  .row(style='margin-top:5%',align='center')
                    .col-md-10.col-md-offset-1(style="white-space: pre-line;")
                      {{post.body}}

                  .row(style='margin-top:8%')
                    .col-md-1()
                      button.btn.btn-sm.btn-danger(id='like{{post._id}}', ng-click='like(post._id)', data-toggle="tooltip", data-placement="top", title="A {{post.like.length}} personas les gusta esto", type='button',ng-mouseover='showLikeTooltip(post._id)',ng-class = "{'active-like-pray': getLikeButtonStatus(post._id) == true}")
                        span.glyphicon.glyphicon-heart
                    .col-md-1.col-md-offset-1
                      button.btn.btn-sm.btn-primary(id='pray{{post._id}}', ng-click='pray4You(post._id)', style='background: url("img/religion20.png")center no-repeat;padding-left: 15px;width:35px;height:30px;', data-toggle="tooltip", data-placement="top" ,title="{{post.pray4You.length}} personas estan orando por esto", type='button',ng-mouseover='showPrayTooltip(post._id)',ng-class = "{'active-like-pray': getPrayButtonStatus(post._id) == true}")
                        


          


                

        //panel for real time chat
      .cd-panel.from-right
        header.cd-panel-header
          h1(align='center') Perfil del Misionero
          a.cd-panel-close(href='#0') Close
        .cd-panel-container
          .cd-panel-content

            .row
              .col-md-4.col-md-offset-1
                a.thumbnail(href='#')
                  img.img-responsive.img-rounded(src='/img/userPhotos/{{id}}.jpg', alt='img-responsive')

              .col-md-7
                .well.well-lg
                  h3
                    .row
                      .col-md-3
                        span.glyphicon.glyphicon-user(aria-hidden="true")
                      .col-md-offset-1
                        | {{name}}

                    .row.margin-top
                      .col-md-3
                         span.glyphicon.glyphicon-gift(aria-hidden="true")
                      .col-md-offset-1
                        | Cumpleaños: {{day}}/{{month}}

                     .row.margin-top
                      .col-md-3
                        span.glyphicon.glyphicon-pushpin(aria-hidden="true")
                      .col-md-offset-1
                        | Lugar de Servicio: 
                      .row.margin-top
                        .col-md-offset-3
                          {{servicePlace}}
                        
                     .row.margin-top
                        .col-md-10.col-md-offset-1
                          a(href='#')
                            | Editar Información

            .row
                              .col-md-11.col-md-offset-1
                                .well.well-lg
                                  .row
                                      .col-md-3
                                        span.glyphicon.glyphicon-tag(aria-hidden="true")
                                      .col-md-offset-1
                                        | Biografía:

                                     .row.margin-top
                                      .col-md-10.col-md-offset-1()
                                        {{biography}}

            .row
              .col-md-offset-1.col-md-11
                   .list-group
                      a.list-group-item.active(href='#',align='center')
                        | Publicaciones Recientes 
                      a.list-group-item(href='#') Dapibus ac facilisis in
                      a.list-group-item(href='#') Morbi leo risus
                      a.list-group-item(href='#') Porta ac consectetur ac
                      a.list-group-item(href='#') Vestibulum at eros
                              
                  

              
            
            .footer.col-md-10.col-md-offset-1
              
                
            
          // cd-panel-content
        // cd-panel-container
      // cd-panel


      //Post Modal

    #postModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') &times;
              .row
                .col-md-2
                  img.img-rounded(src='img/userPhotos/{{id}}.jpg', alt='img-responsive',height='35',width='35',style='margin-left:20%')
                .col.md-8(style='margin-top:2%; margin-left:18%')
                  h4#myModalLabel.modal-title {{name}}              
            .modal-body
              .row
                .col-md-12
                  textarea.form-control(rows='6', placeholder='¿Tienes una nueva noticia que contar?',ng-model='postText')
              .row
                .col-md-8.col-md-offset-2
                  a(href='#',style = 'margin-top : 3%',ng-if='myFile').thumbnail
                    img(src='', alt='Image').img-rounded#blah

            .modal-footer
              .fileUpload.btn.btn-primary.pull-left(style='margin-top:0%')
                span.glyphicon.glyphicon-picture
                input.upload(type='file',file-model='myFile')#imgInp
                
              button.btn.btn-default(type='button', data-dismiss='modal') Cancelar
              button.btn.btn-primary(type='button',ng-click='post()') Publicar


        //Like Modal
    #likeModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='mySmallModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header(id="gridSystemModalLabel")
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') &times;
              .row
                .col-md-6.col-md-offset-4
                  h1(style='font-size:200%') ¡Gracias!
          .modal-body(id="gridSystemModalLabel")
            .row
              .col-md-offset-3.col-md-6
                img(src='img/heart256.png').img-responsive
            .row
              .col-md-10.col-md-offset-1
                h2(style='font-size:140%;margin-top:6%;',align='center') ¡Es un gusto saber que te agrada nuestro trabajo!
        


        //Pray Modal
    #prayModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='mySmallModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header(id="gridSystemModalLabel")
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') &times;
              .row
                .col-md-6.col-md-offset-4
                  h1(style='font-size:200%') ¡Gracias!
          .modal-body(id="gridSystemModalLabel")
            .row
              .col-md-offset-3.col-md-6
                img(src='img/send4.png').img-responsive
            .row
              .col-md-10.col-md-offset-1
                h2(style='font-size:140%;margin-top:8%;',align='center') ¡Tus Oraciones son muy importantes para continuar en nuestra obra!
          //


  script(src='/socket.io/socket.io.js')
  script(type='text/javascript').
            moment.locale("es");
    
  