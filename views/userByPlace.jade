html(lang='en',ng-app='Genesis')
  head
    meta(http-equiv="Content-type" content="text/html" ,charset="UTF-8")
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700|Droid+Serif', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css')
    link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet',type='text/css', href='/css/reset.css')
    link(rel='stylesheet', type='text/css',href='/css/animate.css')
    // CSS reset
    link(rel='stylesheet', type='text/css',href='/css/style2.css')
    link(rel='stylesheet', type='text/css',href='/css/styles.css') 
    //link(rel='stylesheet', type='text/css',href='css/masonry_style.css') 

    script(type='text/javascript', src = '/js/jquery-2.1.1.js')
    script(type='text/javascript', src = '/js/angular.min.js')
    script(type='text/javascript' , src = '/js/bootstrap.min.js')
    script(type='text/javascript', src = '/js/angularModule.js')
    script(type='text/javascript', src = '/js/socketModule.js')
    script(type='text/javascript', src = '/js/main.js')
    script(type='text/javascript' , src = '/js/angular-uuid.js')
    script(type='text/javascript' , src = '/js/angular-local-storage.min.js')
      
    // Resource style
    script(src='/js/modernizr.js')
    // Modernizr

    script(src='//momentjs.com/downloads/moment-with-locales.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular-moment/0.10.3/angular-moment.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular-route.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular-cookies.js')


    title Genesis Mesoamerica
  body.animated.fadeIn(ng-controller='userPlaceController')

    header
      #cssmenu
        ul
          li
            a(href='/')
              span Inicio
          li
            a(href='/showDevotionals', ng-show = 'session()')
              span Devocionales
          li.active
            a(href='/showUsers')
              span Misioneros
          li.last
            a.cd-btn(href='#' ,ng-show = 'session()')
              span Perfil
          ul.navbar-right
            li
          
              a(href='/login',ng-hide = 'session()')
                span Iniciar Sesión
         
              a(href='/logout',ng-show = 'session()',ng-click='clearStorage()')
                span Cerrar Sesión

    .container-fluid
      
      main.cd-main-content
        .jumbotron(style = 'margin-top : 1%')
          .row(style='margin-top: -5%')
            h1 Misioneros de #{place}

            .row(style='margin-top: -4%')
              .col-md-8.col-md-offset-2
                .table-responsive
                  table.table.table-hover
                    tr.info
                      td(align='center') Perfil
                      td(align='center') Nombre del Misionero
                      td(align='center') Lugar de Servicio
                      td 
                      
                   
                    tr(ng-repeat='missionary in missionaries')
                        td(align='center') 
                          a(href='#')
                            img(src='/img/userPhotos/{{missionary._id}}.jpg',height='30',width='30').img-circle
                        td(style='padding-top: 2%',align='center') {{missionary.name}}
                        td(style='padding-top: 2%',align='center') {{missionary.servicePlace}}
                        td 
                          button.btn.btn-primary(type='button', data-toggle='modal', data-target='#modalUser',ng-click='showDetails(missionary._id)') Ver Perfil



        //panel for real time chat
      .cd-panel.from-right
        header.cd-panel-header
          h1(align='center') Perfil del Misionero
          a.cd-panel-close(href='#0') Close
        .cd-panel-container
          .cd-panel-content

            .row
              .col-md-4.col-md-offset-1
                a.thumbnail(href='#')
                  img.img-responsive.img-rounded(src='/img/userPhotos/{{id}}.jpg', alt='img-responsive')

              .col-md-7
                .well.well-lg
                  h3
                    .row
                      .col-md-2
                        span.glyphicon.glyphicon-user(aria-hidden="true")
                      .col-md-offset-1.col-md-9
                        | {{name}}

                    .row.margin-top
                      .col-md-3
                         span.glyphicon.glyphicon-gift(aria-hidden="true")
                      .col-md-offset-1
                        | Cumpleaños: {{day}}/{{month}}

                     .row.margin-top
                      .col-md-3
                        span.glyphicon.glyphicon-pushpin(aria-hidden="true")
                      .col-md-offset-1
                        | Lugar de Servicio: 
                      .row.margin-top
                        .col-md-offset-3
                          {{servicePlace}}
                        
                     .row.margin-top
                        .col-md-10.col-md-offset-1
                          a(href='#')
                            | Editar Información

            .row
                              .col-md-11.col-md-offset-1
                                .well.well-lg
                                  .row
                                      .col-md-3
                                        span.glyphicon.glyphicon-tag(aria-hidden="true")
                                      .col-md-offset-1
                                        | Biografía:

                                     .row.margin-top
                                      .col-md-10.col-md-offset-1(style="white-space: pre-line;")
                                        {{biography}}


            .row
              .col-md-offset-1.col-md-11
                   .list-group
                      a.list-group-item.active(href='#',align='center')
                        | Publicaciones Recientes 
                      a.list-group-item(href='#') Dapibus ac facilisis in
                      a.list-group-item(href='#') Morbi leo risus
                      a.list-group-item(href='#') Porta ac consectetur ac
                      a.list-group-item(href='#') Vestibulum at eros
                              
                  

              
            
            .footer.col-md-10.col-md-offset-1
              
                
            
          // cd-panel-content
        // cd-panel-container
      // cd-panel


    // Modal
                    
    #modalUser.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                    .modal-dialog
                      .modal-content
                        .modal-header
                          button.close(type='button', data-dismiss='modal', aria-label='Close')
                            span(aria-hidden='true') ×
                          h4(align='center',style='font-size:120%')#myModalLabel.modal-title {{userDetails.name}}
                        .modal-body
                            .row
                              .col-md-5
                                a.thumbnail(href='#')
                                  img.img-responsive.img-rounded(src='/img/userPhotos/{{userDetails._id}}.jpg', alt='img-responsive')
                            

                              .col-md-7
                                .well.well-lg
                                  h3
                                    .row
                                      .col-md-2
                                        span.glyphicon.glyphicon-user(aria-hidden="true")
                                      .col-md-10
                                        | {{userDetails.name}}

                                    .row.margin-top
                                      .col-md-3
                                         span.glyphicon.glyphicon-gift(aria-hidden="true")
                                      .col-md-offset-1
                                        | Cumpleaños: {{userDay}}/{{userMonth}}

                                     .row.margin-top
                                      .col-md-3
                                        span.glyphicon.glyphicon-pushpin(aria-hidden="true")
                                      .col-md-offset-1
                                        | Lugar de Servicio: 
                                      .row.margin-top
                                        .col-md-offset-3
                                          {{userDetails.servicePlace}}

                            .row
                              .col-md-12
                                .well.well-lg
                                  .row
                                      .col-md-3
                                        span.glyphicon.glyphicon-tag(aria-hidden="true")
                                      .col-md-offset-1
                                        | Biografía:

                                     .row.margin-top
                                      .col-md-10.col-md-offset-1(style="white-space: pre-line;")
                                        {{userDetails.biography}}


                                     

                                     
                                      
                          
                        //.modal-footer
                           .row
                            .col-md-3
                              button.btn.btn-danger(type='button',ng-click='deleteResident(residentDetails.objectId)',ng-disabled = '{{onlyReadCookie}}') Eliminar 
                                span(class="glyphicon glyphicon-trash" aria-hidden="true")
                            .col-md-offset-5.col-md-4
                              button.btn.btn-default(type='button', data-dismiss='modal') Cerrar






  script(src='/socket.io/socket.io.js')
  script(type='text/javascript').
            moment.locale("es");