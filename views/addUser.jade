doctype html
html(lang='en',ng-app='Genesis')
  head
    meta(http-equiv="Content-type" content="text/html", charset="UTF-8")
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700|Droid+Serif', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css')
    link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet',type='text/css', href='css/reset.css')
    link(rel='stylesheet', type='text/css',href='css/animate.css')
    // CSS reset
    link(rel='stylesheet', type='text/css',href='css/style2.css')
    link(rel='stylesheet', type='text/css',href='css/styles.css') 

    script(type='text/javascript', src = 'js/jquery-2.1.1.js')
    script(type='text/javascript', src = 'js/angular.min.js')
    script(type='text/javascript', src = 'js/angularModule.js')
    script(type='text/javascript', src = 'js/socketModule.js')
    script(type='text/javascript', src = 'js/main.js')
    script(type='text/javascript' , src = 'js/angular-uuid.js')
    script(type='text/javascript' , src = 'js/angular-local-storage.min.js')
    script(src='//momentjs.com/downloads/moment-with-locales.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular-moment/0.10.3/angular-moment.js')
      
    // Resource style
    script(src='js/modernizr.js')
    // Modernizr

    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular-route.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular-cookies.js')

    title Genesis Mesoamerica
  body.animated.fadeIn(ng-controller='addUserController')

    header
      #cssmenu
        ul
          li
            a(href='/')
              span Inicio
          li
            a(href='/showDevotionals', ng-show = 'session()')
              span Devocionales
          li.active
            a(href='/showUsers')
              span Misioneros
          li.last
            a.cd-btn(href='/showUsers' ,ng-show = 'session()')
              span Perfil
          ul.navbar-right
            li
          
              a(href='/login',ng-hide = 'session()')
                span Iniciar Sesión
         
              a(href='/logout',ng-show = 'session()')
                span Cerrar Sesión

    .container-fluid
      
      main.cd-main-content
        .jumbotron(style = 'margin-top : 1%')
          h2(style='font-size: 150%') Registrar Nuevo Misionero
          .row
            p(style = 'margin-top : 3%')
             
              form(method ='post', action='/user',enctype="multipart/form-data")
                .row
                  .col-md-5.col-md-offset-1 
                    .form-group
                      label Nombre del Misionero:
                      input.form-control(type='text',name='name', placeholder='Nombre del Misionero',required,style = 'margin-top : 1%')
                    .form-group
                      label Contraseña:
                      input.form-control(type='text',name='pass', placeholder='Contraseña',required,style = 'margin-top : 1%')
                    .form-group
                      label Cumpleaños:
                      input.form-control(type='date',name='birth',style = 'margin-top : 1%')
                    .form-group
                      label Lugar de Servicio:
                      input.form-control(type='text',name='place', placeholder='Lugar de Servicio',required,style = 'margin-top : 1%')
                    .form-group
                      label Biografía:
                      textarea.form-control(rows='6',name='bio',style = 'margin-top : 1%')
                  .col-md-3.col-md-offset-1
                    .form-group
                      label Imágen de Perfil:
                      a(href='#',style = 'margin-top : 3%').thumbnail
                        img(src='img/1446717642_user-id.png', alt='Perfil').img-rounded#blah
                      input(type='file',name='photo', accept= '.jpg',required)#imgInp
                .row
                  .col-md-6-col-md-offset-3
                  button(type='submit').btn.btn-lg.btn-primary Guardar Misionero



        //panel for real time chat
      .cd-panel.from-right
        header.cd-panel-header
          h1(align='center') Perfil del Misionero
          a.cd-panel-close(href='#0') Close
        .cd-panel-container
          .cd-panel-content

            .row
              .col-md-4.col-md-offset-1
                a.thumbnail(href='#')
                  img.img-responsive.img-rounded(src='img/userPhotos/{{id}}.jpg', alt='img-responsive')

              .col-md-7
                .well.well-lg
                  h3
                    .row
                      .col-md-3
                        span.glyphicon.glyphicon-user(aria-hidden="true")
                      .col-md-offset-1
                        | {{name}}

                    .row.margin-top
                      .col-md-3
                         span.glyphicon.glyphicon-gift(aria-hidden="true")
                      .col-md-offset-1
                        | Cumpleaños: {{day}}/{{month}}

                     .row.margin-top
                      .col-md-3
                        span.glyphicon.glyphicon-pushpin(aria-hidden="true")
                      .col-md-offset-1
                        | Lugar de Servicio: {{servicePlace}}


                     .row.margin-top
                      .col-md-3
                        span.glyphicon.glyphicon-tag(aria-hidden="true")
                      .col-md-offset-1
                        | Biografía:

                     .row.margin-top
                      .col-md-10.col-md-offset-1(align='justify')
                        {{biography}}
                        
                     .row.margin-top
                        .col-md-10.col-md-offset-1
                          a(href='#')
                            | Editar Información


            .row
              .col-md-offset-1.col-md-11
                   .list-group
                      a.list-group-item.active(href='#',align='center')
                        | Publicaciones Recientes 
                      a.list-group-item(href='#') Dapibus ac facilisis in
                      a.list-group-item(href='#') Morbi leo risus
                      a.list-group-item(href='#') Porta ac consectetur ac
                      a.list-group-item(href='#') Vestibulum at eros
                              
                  

              
            
            .footer.col-md-10.col-md-offset-1
              
                
            
          // cd-panel-content
        // cd-panel-container
      // cd-panel

  script(src='/socket.io/socket.io.js')